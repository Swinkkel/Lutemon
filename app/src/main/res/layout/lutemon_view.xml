<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rowitem"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    android:background="#C9B6EA">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ivLutemonImage"
            android:layout_width="100dp"
            android:layout_height="100dp"
            tools:srcCompat="@tools:sample/avatars" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvLutemonName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="5dp"
                android:paddingBottom="5dp"
                android:text="Lutemon name"
                android:textSize="24sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:paddingLeft="5dp">

                <LinearLayout
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvAttack"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Attack" />

                    <TextView
                        android:id="@+id/tvDefense"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Defense" />

                    <TextView
                        android:id="@+id/tvHealth"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Health" />

                    <TextView
                        android:id="@+id/tvExperience"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Experience" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvTrainingDays"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Training days:" />

                    <TextView
                        android:id="@+id/tvNrBattles"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Number of battles: " />

                    <TextView
                        android:id="@+id/tvNrWins"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Number of wins:" />

                    <TextView
                        android:id="@+id/tvNrLoses"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Number of loses" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</androidx.appcompat.widget.LinearLayoutCompat>